<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center"
	android:background="@drawable/gray">
	<TextView android:id="@+id/testdata" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:paddingTop="5dp"
		android:layout_gravity="top" android:textColor="@drawable/white_text"
		android:paddingLeft="10dip" android:paddingRight="2dip"
		android:paddingBottom="60dp" android:textSize="17sp"
		android:text="@string/aro_usetestdata"></TextView>
	<TextView android:id="@+id/aro_dcstarted"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:paddingTop="5dip" android:background="@drawable/white"
		android:textColor="@drawable/black" android:paddingLeft="10dip"
		android:paddingRight="2dip" android:paddingBottom="60dip"
		android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
		android:textSize="16sp" android:text="@string/aro_dcstarted"></TextView>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="center">
		<Button android:id="@+id/hidedatacollector"
			android:layout_width="150dp" style="@style/BlueButton"
			android:layout_height="45dp" android:text="@string/hidecollector"
			android:paddingRight="2dp" android:textSize="16sp">
		</Button>
		<Button android:id="@+id/stopcollector" android:layout_width="150dp"
			style="@style/BlueButton" android:layout_height="45dp"
			android:text="@string/stopcollector" android:textSize="16sp">
		</Button>
	</LinearLayout>
</LinearLayout>
